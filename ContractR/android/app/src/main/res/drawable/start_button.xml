<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="@color/StartColorPressed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="@color/StartColor" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>